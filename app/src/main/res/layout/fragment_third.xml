<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Adapters.ThirdFragment">

    <TextView
        android:id="@+id/textAC"
        android:text="jacob_w"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="20sp"
        android:layout_width="match_parent"
        android:layout_marginTop="30dp"
        android:gravity="center_horizontal"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="16dp"
        android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/imageAVA"
            android:padding="12dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textAC"
            android:src="@drawable/avatarka"
            android:layout_width="150dp"
            android:layout_height="150dp" />

        <TextView
            android:textStyle="bold"
            android:id="@+id/textFlower"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:layout_marginStart="24dp"
            android:text="54"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/imageAVA"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/textd"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:text="834"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/imageAVA"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/textCuria"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:text="162"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/textd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/TEXT"
            android:layout_marginEnd="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintStart_toEndOf="@id/imageAVA"
            app:layout_constraintTop_toBottomOf="@id/textFlower"
            android:textColor="@color/black"
            android:textStyle="normal"
            android:textSize="18sp"
            android:text="Posts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/TEXT2"
            android:textSize="18sp"
            android:layout_marginEnd="24dp"
            android:textStyle="normal"
            app:layout_constraintTop_toBottomOf="@id/textd"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/TEXT"
            android:textColor="@color/black"
            android:text="Followers"
            app:layout_constraintStart_toEndOf="@id/TEXT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:textStyle="normal"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:text="Following"
            android:layout_marginEnd="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textCuria"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/tv_Text"
            android:padding="12dp"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@id/imageAVA"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="18sp"
            android:text="Jacob West"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/TEXT3"
            android:layout_marginTop="-12dp"
            app:layout_constraintStart_toStartOf="parent"
            android:padding="12dp"
            app:layout_constraintTop_toBottomOf="@id/tv_Text"
            android:textStyle="normal"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:text="Digital goodies designer @pixsellz \nEverything is designed."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginHorizontal="12dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/TEXT3"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:backgroundTint="@color/white"
            android:text="Edit Profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    <com.google.android.material.tabs.TabLayout
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/TabLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/ViewPager"
        app:layout_constraintTop_toBottomOf="@id/TabLayout"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="0dp"
        android:layout_height="0dp" />

    <TextView
        android:id="@+id/tv_person"
        app:layout_constraintBottom_toBottomOf="@id/imageAVA"
        android:text="54"
        android:layout_marginStart="24dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="22sp"
        app:layout_constraintTop_toTopOf="@id/imageAVA"
        app:layout_constraintStart_toEndOf="@id/imageAVA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_followers"
        app:layout_constraintBottom_toBottomOf="@id/imageAVA"
        android:text="834"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="22sp"
        app:layout_constraintTop_toTopOf="@id/imageAVA"
        app:layout_constraintStart_toEndOf="@id/tv_person"
        android:layout_marginStart="40dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_follower"
        app:layout_constraintBottom_toBottomOf="@id/imageAVA"
        android:text="162"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="22sp"
        app:layout_constraintTop_toTopOf="@id/imageAVA"
        android:layout_marginStart="40dp"
        app:layout_constraintStart_toEndOf="@id/tv_followers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_marginBottom="12dp"
        android:id="@+id/text_person"
        app:layout_constraintBottom_toBottomOf="@id/imageAVA"
        android:text="Posts"
        android:layout_marginStart="18dp"
        android:textColor="@color/black"
        android:textStyle="normal"
        android:textSize="18sp"
        app:layout_constraintTop_toTopOf="@id/tv_person"
        app:layout_constraintStart_toEndOf="@id/imageAVA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_marginBottom="12dp"
        android:id="@+id/text_followers"
        app:layout_constraintBottom_toBottomOf="@id/imageAVA"
        android:text="Followers"
        android:layout_marginStart="18dp"
        android:textColor="@color/black"
        android:textStyle="normal"
        android:textSize="18sp"
        app:layout_constraintTop_toTopOf="@id/tv_person"
        app:layout_constraintStart_toEndOf="@id/text_person"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_marginStart="-36dp"
        android:layout_marginBottom="12dp"
        android:id="@+id/text_follower"
        app:layout_constraintBottom_toBottomOf="@id/imageAVA"
        android:text="Follower"
        android:textColor="@color/black"
        android:textStyle="normal"
        android:textSize="18sp"
        app:layout_constraintTop_toTopOf="@id/tv_person"
        app:layout_constraintStart_toEndOf="@id/tv_follower"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</androidx.constraintlayout.widget.ConstraintLayout>